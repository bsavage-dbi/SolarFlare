{
  "manifest_version": 2,

  "name": "SolarFlare",
  "short_name": "SFlare",
  "description": "This extension streamlines the process of creating JIRA documentation, by developers for developers",
  "version": "1.0.1.0",
  "default_locale": "en",

  "background": {
      "scripts": ["js/background.js"],
      "persistent": false
  },
  "browser_action": {
   "default_icon": "images/icon.png"
  },
  "permissions": [
   "activeTab"
   ]
}
